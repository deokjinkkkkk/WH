<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.admin.wh.member.mapper.MemberMapper">
	
	<select id="memberSelect"
			resultType="co.admin.wh.member.vo.MemberVO">
			SELECT id, '{noop}'|| pass pass,name,gender,tel,email,perm,login_way,token,retoken,state
			FROM member
			where id = #{id}
	<!-- 		AND PASS = #{pass} -->
	</select>
	
	<insert id="memberInsert">
		insert into member(id,password,name,gender,tel,email,perm,state)
		values(#{id},#{password},#{name},#{gender},#{tel},#{email},USER,0)
	</insert>
	<select id="memberList" resultType="co.admin.wh.member.vo.MemberVO">
		select * from member
	</select>
	
	<select id="idChk" resultType="boolean">
		SELECT CASE WHEN COUNT(id) = 1 THEN 0 ELSE 1 END AS ID 
		FROM MEMBER WHERE id = #{id}
	</select>
	
	<update id="memberUpdate">
	update member 
	<set>
	<if test="password != null">password = #{password},</if>
	<if test="password != null">name = #{name},</if>
	<if test="password != null">tel = #{tel},</if>
	<if test="password != null">email = #{email}</if>
	</set>
	where id =#{id}
	</update>
	
	<delete id="memberDelete">
	delete from member
	where id = {id}
	</delete>
	
	<insert id="memDel">
	insert into quit
	values(#{id},#{password},#{name},#{gender},#{tel},#{email})
	</insert>
</mapper>