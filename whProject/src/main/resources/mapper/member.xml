<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.admin.wh.member.mapper.MemberMapper">
	
	<select id="memberSelect"
			resultType="co.admin.wh.member.vo.MemberVO">
			SELECT * FROM member
			where id = #{id}
			<if test="password != null">
			AND PASSWORD = #{password}
			</if>
	</select>
	
	<insert id="memberInsert">
		insert into member(id,password,name,gender,tel,email,perm,state)
		values(#{id},#{password},#{name},#{gender},#{tel},#{email},USER,0)
	</insert>
	<select id="memberList" resultType="co.admin.wh.member.vo.MemberVO">
		select * from member
	</select>	
</mapper>