<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.admin.wh.trip.mapper.MyCourseMapper">

	<!-- 전체 리스트 -->
	<select id="myCourseList" resultType="co.admin.wh.trip.vo.MyCourseVO">
		SELECT * FROM MY_COURSE
		ORDER BY my_course_code
	</select>

	<!-- 코스 제목 등록 -->
	<insert id="titleInsert" parameterType="co.admin.wh.trip.vo.MyCourseVO">
	<selectKey keyProperty="myCourseCode" resultType="int" order="BEFORE">
		SELECT NVL(MAX(my_Course_Code),0)+1 FROM MY_COURSE
	</selectKey>
	INSERT INTO MY_COURSE
	VALUES(#{myCourseCode}, #{theme}, #{myCouDate}, #{myCouName}, #{myCouContent}, #{myCouState}, #{myCouId})
	</insert>

	<!-- 상세보기 페이지 -->
	<select id="detailSelect" resultType="co.admin.wh.trip.vo.MyCourseVO">
		SELECT * FROM MY_COURSE
		WHERE MY_COURSE_CODE = #{myCourseCode}
	</select>
	
	<!-- 나만의 코스 리스트 삭제 -->
	<delete id="myCourseDelete">
		DELETE FROM MY_COURSE
		WHERE MY_COURSE_CODE = #{myCourseCode}
	</delete>
	
	
	<!-- 리스트 삭제 시, 순서 번호 업데이트 -->
	<update id="myCouSeqUpdate">
	    UPDATE MY_COURSE
	    SET MY_COURSE_CODE = MY_COURSE_CODE - 1
	    WHERE MY_COURSE_CODE > #{myCourseCode}
	</update>
	
	<!-- 나만의 코스 리스트를 공유할 시, 코스 목록에 출력 
	<select id="myCouSharing" resultType="co.admin.wh.trip.vo.MyCourseVO">
		select 'a' gb , TO_NUMBER(cou_code), cou_name, img_gro_code
		FROM COURSE 
		union all
		select 'm' gb , my_course_code, my_cou_name, (
		    SELECT t.img_gro_code
		      from my_course_free c join trip t on c.trip_unique_number = t.trip_unique_number 
		    where my_course_code = m.my_course_code
		    AND cou_ord = '1' AND rownum = 1
		) img from my_course m;
	</select> -->
	
	<!-- ===================
				 태그
	======================= -->
	
	
	<!-- 태그 리스트 - 랜덤값 -->
	<select id="tagList">
		SELECT * FROM TAG
		ORDER BY DBMS_RANDOM.VALUE
	</select>
	
	<!-- 태그 ul 만들기 -->
	<!-- TAG 테이블에서 TAG_NAME 열을 검색하도록 지정하며, 검색된 결과를 오름차순으로 정렬하여 반환 -->
	<select id="searchTags" parameterType="string" resultType="string">
		SELECT TAG_NAME FROM TAG
		WHERE TAG_NAME LIKE CONCAT('#{tag}','%')
		ORDER BY TAG_NAME ASC
	</select>
	
</mapper>